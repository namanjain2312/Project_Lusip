<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/student_cont"
    android:elevation="20dp"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp">
    <TextView
        android:id="@+id/name"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:text="My name"
        android:textColor="@android:color/black"
        android:gravity="center"/>

    <TextView
        android:id="@+id/message_student_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:text="My title"
        android:layout_margin="10dp"
        />

    <Button
        android:id="@+id/playButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_student_content"
        android:layout_marginTop="89dp"
        android:layout_margin="10dp"
        android:text="Click to play audio"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delete"
        android:text="delete"
        android:background="#312C47"
        android:textSize="20sp"
        android:elevation="50dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@+id/playButton"
        android:layout_alignParentEnd="true"
        />

    <ImageView
        android:layout_width="40dp"
        android:gravity="center"
        android:layout_height="40dp"
        android:id="@+id/comment_teacher"
        android:layout_below="@+id/playButton"
        android:layout_alignParentStart="true"
        android:background="@drawable/ic_comment_black_24dp"/>


</RelativeLayout>